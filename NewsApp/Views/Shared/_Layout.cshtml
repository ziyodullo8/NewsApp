<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 40px;
        }

            .header .head {
                font-size: 40px;
                font-family: sans-serif;
                font-weight: lighter;
            }

            .header .back {
                padding: 10px 20px;
                background-color: blue;
                border: none;
                letter-spacing: 1px;
                font-size: 16px;
                color: white;
                border-radius: 5px;
            }

                .header .back:active {
                    color: rgb(134, 176, 245);
                }

        .main {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: center;
        }

            .main label {
                font-weight: bold;
                margin-top: 10px;
                font-family: sans-serif;
            }

            .main input {
                text-indent: 10px;
                width: 100%;
                min-height: 40px;
                border-radius: 5px;
                border: 2px solid gainsboro;
                display: flex;
                align-items: center;
            }

        #coment {
            width: 100%;
            min-height: 200px;
            text-indent: 10px;
            padding-top: 10px;
            border-radius: 3px;
            border: 2px solid rgb(191, 188, 188)
        }

        .file {
            padding-top: 7px;
        }

        .submit {
            margin: 20px auto;
            padding: 10px 20px;
            border-radius: 5px;
            background-color: blue;
            color: white;
            border: none;
            font-size: 16px;
        }

            .submit:active {
                color: rgb(134, 176, 245);
            }

    </style>
</head>
<body> 
            @RenderBody()

</body>
</html>
